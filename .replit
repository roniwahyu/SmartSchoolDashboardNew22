modules = ["php", "php-8.2", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd public && php -S 0.0.0.0:5000 -t ."
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd public && php -S 0.0.0.0:5000 -t ."]
